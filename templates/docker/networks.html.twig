{% extends 'base.html.twig' %}
{% block title %}{{ parent() }} - Networks{% endblock %}

{% block body %}
    <h1>Networks</h1>
    <p>
        Found: {{ items|length }}
    </p>
    {% if error %}
        <div class="alert alert-danger">{{ error }}</div>
    {% endif %}

    <table class="table">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Driver</th>
            <th>Scope</th>
            <th>Actions</th>
        </tr>
        {% for item in items %}
            <tr>
                <td>{{ item.ID }}</td>
                <td>{{ item.Name }}</td>
                <td>{{ item.Driver }}</td>
                <td>{{ item.Scope }}</td>
                <td><a href="{{ path('app_docker_networks_remove', {'id':item.ID}) }}">Remove</a></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}





